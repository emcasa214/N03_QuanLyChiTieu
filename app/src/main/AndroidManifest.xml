<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.N03_QuanLyChiTieu"
        tools:targetApi="31">
        <activity
            android:name=".ui.sign.BeginActivity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.sign.SignUp" />
        <activity android:name=".ui.sign.LogIn" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.category.AddCategoryActivity" />
        <activity android:name=".ui.user.UserProfileActivity" />
        <activity
            android:name=".ui.income.ViewIncomeActivity"
            android:exported="false">
        </activity>
        <activity android:name=".ui.sign.GetOtp" />
        <activity android:name=".ui.sign.VerifyOtp" />

<!--        Google-->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
<!--        Client ID tá»« Google Cloud Console-->
        <meta-data
            android:name="com.google.android.gms.auth.api.signin.GoogleSignInOptions.clientId"
            android:value="@string/google_client_id" />
    </application>

</manifest>
